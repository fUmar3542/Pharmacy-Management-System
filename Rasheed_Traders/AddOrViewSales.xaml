<Window x:Class="Rasheed_Traders.AddOrViewSales"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rasheed_Traders"
        mc:Ignorable="d"
        Title="AddOrViewSales" Height="450" Width="800">
    <Grid>
        <Grid x:Name="Main" Height="Auto" Width="Auto">
            <DataGrid x:Name="table" ColumnWidth="*" Width="Auto" Height="Auto" Margin="25,71,24,14" FontSize="16" FontFamily="Arial"  />
            <Grid x:Name="search"  Margin="0,0,0,0" HorizontalAlignment="Right" Width="Auto" >
                <TextBox Margin="29,20,340,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="22" BorderBrush="#FF8B8D93" Height="37"/>
                <Button x:Name="createSale" Content="Create Sale"  Margin="620,20,32,0" VerticalAlignment="Top" FontSize="22" Width="148" Padding="1,5,1,5" FontFamily="Bell MT" Background="#FFF1A26B" Click="Button_Click"/>
                <Button x:Name="searchButton" Content="Search"  Margin="467,20,185,0" VerticalAlignment="Top" FontSize="22" Width="148" Padding="1,5,1,5" FontFamily="Bell MT" Background="#FFB2C78C" Click="Button_Click"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
